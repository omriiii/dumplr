{

  "manifest_version": 2,
  "name": "dumplr",
  "version": "1.0",

  "description": "Adds a button to post all of the posts you have in your Drafts page.",

  "icons": 
  {
    "48": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.tumblr.com/blog/*/drafts"],
      "js": ["dumplr.js"]
    }
  ]

}